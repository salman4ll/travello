<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/hei__welcome_to"
        android:textSize="24sp"
        android:textColor="@color/hei__welcome_to_color"
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hei__welcome_to_string"
        android:layout_centerHorizontal="true"
        />
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hei__welcome_to"
        android:id="@+id/travello_"
        android:textSize="36dp"
        android:textColor="@color/hei__welcome_to_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/travello__string"
        android:layout_centerHorizontal="true"
        />
    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button"
        android:layout_centerHorizontal="true"
        />
</androidx.constraintlayout.widget.ConstraintLayout>